/* Global Styles */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Microsoft YaHei', Arial, sans-serif;
  font-size: 28rpx;
  color: #333;
  background-color: #f5f5f5;
  box-sizing: border-box;
}

.container {
  padding: 20rpx;
}

/* Common button styles */
.btn-primary {
  background-color: #07c160;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 0;
  font-size: 32rpx;
  text-align: center;
}

.btn-primary::after {
  border: none;
}

.btn-danger {
  background-color: #ee0a24;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 0;
  font-size: 32rpx;
  text-align: center;
}

/* Common card styles */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* Empty state */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  color: #999;
}

.empty-state .empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.empty-state .empty-text {
  font-size: 28rpx;
}

/* Loading */
.loading {
  display: flex;
  justify-content: center;
  padding: 40rpx;
  color: #999;
  font-size: 26rpx;
}

/* Price text */
.price {
  color: #ee0a24;
  font-weight: bold;
}
