<view class="login-page">
  <view class="logo-area">
    <text class="logo-icon">🏪</text>
    <text class="logo-title">无人超市</text>
    <text class="logo-subtitle">欢迎回来</text>
  </view>

  <view class="form-area">
    <view class="form-item">
      <text class="form-icon">👤</text>
      <input class="form-input" placeholder="请输入用户名" value="{{username}}" bindinput="onUsernameInput" />
    </view>
    <view class="form-item">
      <text class="form-icon">🔒</text>
      <input class="form-input" placeholder="请输入密码" password="true" value="{{password}}" bindinput="onPasswordInput" bindconfirm="doLogin" />
    </view>

    <button class="btn-primary login-btn" bindtap="doLogin" loading="{{loading}}" disabled="{{loading}}">登录</button>

    <view class="register-link" bindtap="goRegister">
      <text>还没有账号？</text>
      <text class="link-text">立即注册</text>
    </view>
  </view>
</view>
