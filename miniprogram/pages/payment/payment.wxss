.container {
  padding: 40rpx 30rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.pay-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.pay-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.pay-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.pay-order-id {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.pay-amount {
  display: block;
  font-size: 72rpx;
  font-weight: bold;
  color: #ee0a24;
  margin-bottom: 40rpx;
}

/* Payment methods */
.pay-methods {
  text-align: left;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 30rpx;
}

.pay-methods-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.pay-method {
  display: flex;
  align-items: center;
  padding: 24rpx 20rpx;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.pay-method.selected {
  border-color: #07c160;
  background-color: #f0fff4;
}

.method-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.method-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.method-check {
  font-size: 32rpx;
  color: #07c160;
  font-weight: bold;
}

.confirm-btn {
  margin-top: 60rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  padding: 24rpx 0;
  border: none;
  width: 100%;
}

.confirm-btn::after {
  border: none;
}

.confirm-btn[disabled] {
  background-color: #ccc;
  color: #fff;
}
